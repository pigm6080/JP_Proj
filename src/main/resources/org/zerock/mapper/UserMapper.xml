<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.UserMapper">




  <resultMap type="org.zerock.domain.UserVO" id="memberMap">
    <id property="id" column="id"/>
    <result property="id" column="id"/>
    <result property="password" column="password"/>
    <result property="username" column="username"/>
    <result property="phone" column="phone"/>
    <result property="createday" column="createday"/>
<!--     <collection property="authList" resultMap="authMap"> -->
<!--     </collection>  -->
  </resultMap>
  
  <resultMap type="org.zerock.domain.AuthVO" id="authMap">
    <result property="username" column="username"/>
    <result property="auth" column="auth"/>
  </resultMap>
  
  
  <select id="read" resultMap="memberMap">
      SELECT
        mem.username , password  ,name , phone  ,createday , auth
      FROM
        user mem Left outer Join user_auth a on mem.username = a.username 
      WHERE mem.username = #{username}
  </select>
  
  
 	<insert id="insert" parameterType="org.zerock.domain.UserVO">
		insert into user(username, password, name, phone)
		values (#{username}, #{password}, #{name}, #{phone})
	</insert>
	
	<insert id="insertAuth" parameterType="org.zerock.domain.AuthVO">
		insert into user_auth(username ,auth)
		values (#{username} , #{auth})
	</insert>
	
	<delete id="delete" parameterType="String">
		delete from user where username = #{username}
	</delete>
	
	<update id="update" parameterType="org.zerock.domain.UserVO">
		update user
		set username = #{username},
		password = #{password},
		name = #{name},
		phone = #{phone}
		where username = #{username}
	</update>
	
	<select id="getList" resultType="org.zerock.domain.UserVO">
		<![CDATA[
			select * from user
		]]>
	</select>
<!-- 	by kgh 권한추가 부분 업데이트로 구현 -->
	<update id="grantAuth" parameterType="org.zerock.domain.AuthVO">
		UPDATE user_auth
		SET
		auth = #{auth}
		WHERE username = #{username}
	</update>
	
	<select id="getUserAuth" parameterType= "String" resultType="org.zerock.domain.AuthVO">
		SELECT * from user_auth where username = #{username}
	</select>
	

</mapper>